<?xml version="1.0" encoding="UTF-8"?>
<connection-fields>
    <field category="endpoint" default-value="127.0.0.1" label="Server" name="server" value-type="string">
        <validation-rule reg-exp="^(([a-zA-Z]|[a-zA-Z][a-zA-Z0-9\-]*[a-zA-Z0-9])\.)*([A-Za-z]|[A-Za-z][A-Za-z0-9\-]*[A-Za-z0-9])$"/>
    </field>
    <field category="endpoint" default-value="5433" label="Port" name="port" value-type="string"/>
    <field category="authentication" default-value="auth-user-pass" editable="false" label="Authentication" name="authentication" value-type="string"/>
    <field category="authentication" default-value="dbadmin" label="Username" name="username" value-type="string"/>
    <field category="authentication" default-value="a" label="Password" name="password" secure="true" value-type="string"/>
    <field category="general" default-value="" label="Require SSL" name="sslmode" value-type="boolean">
        <boolean-options>
            <false-value value=""/>
            <true-value value="require"/>
        </boolean-options>
    </field>
</connection-fields>
